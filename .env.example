# Rectifierr environment variables
# Copy to .env and fill in values

# Plex (can also be set in the UI)
PLEX_URL=http://192.168.1.100:32400
PLEX_TOKEN=

# Paths
MEDIA_ROOT=/media
CONFIG_DIR=/config

# Database
DATABASE_URL=sqlite:////config/rectifierr.db

# Detection tuning
BUMPER_SCAN_SECONDS=180
BUMPER_MAX_DURATION=60
BUMPER_MIN_DURATION=3
SCENE_CHANGE_THRESHOLD=0.35
MIN_CONFIDENCE=0.5
LOGO_DETECTION_ENABLED=true
LOGO_CORNER_MARGIN=180
LOGO_PERSISTENCE_THRESHOLD=0.85

# App
DEBUG=false
